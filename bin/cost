#!/bin/bash

set -eo pipefail

echo "+++ :money_with_wings: Infracost"

if [ -z "$TF_DIR" ]; then
  TF_DIR=$(pwd)
fi

cli_args="--tfdir $TF_DIR"

if [ ! -z "$LOG_LEVEL" ]; then
  cli_args="$cli_args --log-level $LOG_LEVEL"
fi

printf "$INFO cli_args='$cli_args'\n\n"
infracost $cli_args

if [ ! -z "$PULL_REQUEST_BASE_BRANCH" ] && [ "$PULL_REQUEST" != "false" ]; then

  if [ -z "$INFRACOST_CHANGE_THRESHOLD" ]; then
    INFRACOST_CHANGE_THRESHOLD=5
  fi

  printf "\n$INFO INFRACOST_CHANGE_THRESHOLD=$INFRACOST_CHANGE_THRESHOLD\n\n"

  git checkout -q $PULL_REQUEST_BASE_BRANCH
  base_branch_breakdown=$(infracost --no-color $cli_args | tee base_branch_infracost.txt)
  base_branch_cost=$(echo $base_branch_breakdown | awk '/OVERALL TOTAL/ { print $NF }')

  git checkout -q $PULL_REQUEST_COMMIT
  pull_request=$(infracost --no-color $cli_args | tee pull_request_infracost.txt)
  pull_request_cost=$(echo $pull_request | awk '/OVERALL TOTAL/ { print $NF }')

  percent_diff=$(echo "scale=4; $pull_request_cost / $base_branch_cost  * 100 - 100" | bc)
  absolute_percent_diff=$(echo $percent_diff | tr -d -)

  if [ $(echo "$absolute_percent_diff > $INFRACOST_CHANGE_THRESHOLD" | bc -l) == 1 ]; then
    change_word="increase"

    if [ $(echo "$percent_diff < 0" | bc -l) == 1 ]; then
      change_word="decrease"
    fi

    printf "$INFO Posting GitHub comment as $PULL_REQUEST_BASE_BRANCH branch and pull request diff ($absolute_percent_diff) is more than the percentage INFRACOST_CHANGE_THRESHOLD ($INFRACOST_CHANGE_THRESHOLD).\n"
    jq -Mnc --arg environment $TF_VAR_environment \
            --arg change_word $change_word \
            --arg absolute_percent_diff $(printf '%.1f\n' $absolute_percent_diff) \
            --arg base_branch $PULL_REQUEST_BASE_BRANCH \
            --arg base_branch_cost $base_branch_cost \
            --arg pull_request_cost $pull_request_cost \
            --arg diff "$(git diff --no-color --no-index base_branch_infracost.txt pull_request_infracost.txt | tail -n +3)" \
            '{body: "**Environment:** `\($environment)`\n\nMonthly cost estimate will \($change_word) by \($absolute_percent_diff)% ($\($base_branch) branch $\($base_branch_cost) vs pull request $\($pull_request_cost))\n<details><summary>infracost diff</summary>\n\n```diff\n\($diff)\n```\n</details>\n"}' | \
            curl -sL -X POST -d @- \
              -H "Content-Type: application/json" \
              -H "Authorization: token $GITHUB_TOKEN" \
              "https://api.github.com/repos/$GITHUB_REPOSITORY/commits/$PULL_REQUEST_COMMIT/comments" > /dev/null
  else
    printf "$INFO GitHub comment not posted as $PULL_REQUEST_BASE_BRANCH branch and pull request diff ($absolute_percent_diff) is not more than the percentage INFRACOST_CHANGE_THRESHOLD ($INFRACOST_CHANGE_THRESHOLD).\n"
  fi
fi